{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true
  },
  "globals": {
    "browser": true,
    "axios": "readonly"
  },
  "rules": {
    "prettier/prettier": ["error"],
    "class-methods-use-this": "off",
    "strict": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "linebreak-style": "off",
    "func-names": "off",
    "prefer-destructuring": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  }
}
